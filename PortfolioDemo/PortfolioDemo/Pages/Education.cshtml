@page
@model EducationModel
@{
    ViewData["Title"] = "Education";
}

<section class="content-section">
    <div class="container">
        <div class="section-header">
            <h2>Education</h2>
        </div>
        
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card-flowery">
                    <div style="display: flex; align-items: center; gap: 2rem;">
                        <div style="flex: 0 0 100px;">
                            <i class="fas fa-graduation-cap" style="font-size: 4rem; color: var(--accent-green);"></i>
                        </div>
                        <div>
                            <h3 style="color: var(--accent-pink); margin-bottom: 0.5rem;">Bachelor of Science in Computer Science</h3>
                            <p style="font-size: 1.1rem; color: var(--dark-text); margin-bottom: 0.25rem;"><strong>George Mason University</strong></p>
                            <p style="color: var(--accent-green); margin-bottom: 1rem;"><strong>Fairfax, VA</strong></p>
                            <p style="line-height: 1.8; color: var(--dark-text);">
                                Comprehensive education in computer science fundamentals, algorithms, data structures, software engineering, and computer systems. 
                                Strong foundation in problem-solving and software design principles that have been applied throughout my professional career.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-header" style="margin-top: 4rem;">
            <h2>Continuous Learning</h2>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card-flowery">
                    <h4 style="color: var(--accent-pink); margin-bottom: 1rem;"><i class="fas fa-certificate"></i> Microsoft Certifications</h4>
                    <ul style="list-style: none; padding: 0;">
                        <li style="margin-bottom: 0.75rem;"><i class="fas fa-check-circle" style="color: var(--accent-green); margin-right: 0.5rem;"></i> Azure Expert Certified</li>
                        <li style="margin-bottom: 0.75rem;"><i class="fas fa-check-circle" style="color: var(--accent-green); margin-right: 0.5rem;"></i> Continuous skill development in cloud technologies</li>
                        <li><i class="fas fa-check-circle" style="color: var(--accent-green); margin-right: 0.5rem;"></i> Staying updated with latest Azure services</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-flowery">
                    <h4 style="color: var(--accent-pink); margin-bottom: 1rem;"><i class="fas fa-book"></i> Professional Development</h4>
                    <ul style="list-style: none; padding: 0;">
                        <li style="margin-bottom: 0.75rem;"><i class="fas fa-check-circle" style="color: var(--accent-green); margin-right: 0.5rem;"></i> Leadership & mentoring training</li>
                        <li style="margin-bottom: 0.75rem;"><i class="fas fa-check-circle" style="color: var(--accent-green); margin-right: 0.5rem;"></i> Technical documentation excellence</li>
                        <li><i class="fas fa-check-circle" style="color: var(--accent-green); margin-right: 0.5rem;"></i> Modern development practices & patterns</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>